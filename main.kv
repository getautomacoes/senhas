WindowManager:
    Tela:

<Tela>:
    name: "tereira"
    FloatLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: txt
            font_size: 30
            color: 123/255, 104/255, 238/255
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}


        Button:
            text: "GERAR E COPIAR"
            font_size: 23
            color: 1,1,1,1
            background_normal: ''
            background_color: 123/255, 104/255, 238/255
            size_hint: (0.8, 0.1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            on_release: app.texto(txt)




